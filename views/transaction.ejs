<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color:#B0D8DA;">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 min-vh-100">
                <a href="/home" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline" style="color:#00304C;"><h2><img src="/image/efullpay_logo.png" style="width:100px; height:100px; margin:0!; padding:0!;">EFullPay</h2></span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <li class="nav-item">
                        <a href="#" class="nav-link align-middle px-0">
                            <span class="ms-1 d-none d-sm-inline" style="color:#00304C;"><img src="/image/Account Manager Logo.png" style="width:35px; height:27px; margin:10px; padding:0!;">Account Manager</span>
                        </a>
                    </li>
                    <li>
                        <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                            <span class="ms-1 d-none d-sm-inline" style="color:#00304C;"><img src="/image/Inventory Logo.png" style="width:35px; height:28px; margin:10px; padding:0!;">Inventory</span> 
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link px-0 align-middle">
                            <span class="ms-1 d-none d-sm-inline" style="color:#00304C; text-decoration: underline;"><img src="/image/Transaction Logo.png" style="width:32px; height:28px; margin:10px; padding:0!;">Transaction</span>
                        </a>
                    </li>
                    <li>
                        <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                            </i> <span class="ms-1 d-none d-sm-inline" style="color:#00304C;"><img src="/image/Recapitulation Logo.png" style="width:35px; height:31px; margin:10px; padding:0!;">Recapitulation</span>
                        </a>
                    </li>
                </ul>
                <hr>
                <div class="dropdown pb-4">
                    <a href="#" class="d-flex align-items-center text-black text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1" style="color:#00304C;">User 1</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col py-3">
            <div class="mt-4 sub-text">
                <span>
                    <h3>Shopping Cart</h3>
                </span>
                <div class="dropdown">
                    <form method="POST" action="">
                        <div class="input-icons">
                            <i class="fa icon"><img src="/image/search.png" alt="person icon" style="width: 20px; height: 20px;"></i>
                            <input type="text" placeholder="Add Item.." id="myInput" name="myInput" onclick="myFunction()"  onkeyup="filterFunction()" style="width:95%; display: inline-block; text-align:center;">
                        </div> 
                    </form>
                    <div id="myDropdown" class="dropdown-content">
                        <% datas.forEach(function(data, index) { %>
                            <form method="POST" action="/add-to-cart">
                                <input type="hidden" value="<%= data.id_barang %>" id="id_barang" name="id_barang">
                                <input type="hidden" value="<%= data.jenis_barang %>" id="jenis_barang" name="jenis_barang">
                                <input type="hidden" value="<%= data.harga %>" id="harga" name="harga">
                                <p class="barang">
                                    <span class="barang-name"><%= data.jenis_barang %></span>
                                    <span class="barang-stock">Stock: <%= data.stock %><button class="btn" type="submit" style="width:50px; margin-right:5px; margin-left:5px; background-color:#00304C; color:#ffffff">Add</button></span>
                                </p>
                            </form>
                        <% }) %>
                    </div>
                </div>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <thead style="background-color:#B0D8DA;">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">ID Barang</th>
                            <th scope="col">Jenis Barang</th>
                            <th scope="col">Jumlah</th>
                            <th scope="col">Harga</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cart.forEach(function(item, index) { %>
                            <% var formattedAngka = item.harga.toLocaleString('id-ID'); %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= item.id_barang %></td>
                                <td><%= item.jenis_barang %></td>
                                <td>
                                    <form method="POST" action="/edit-jumlah">
                                        <input id="jumlahInput" name="jumlah" value="<%= item.jumlah %>">
                                    </form>
                                </td>
                                <td><%= formattedAngka %></td>
                                <td style="width:35px;"><img src="/image/delete.png" alt="person icon" style="width: 20px; height: 20px;"></td>
                            </tr>
                        <% }) %>
                        <% if (cart.length !== 0) { %>
                            <tr style="background-color:#B0D8DA; font-weight:bolder;">
                                <td colspan="4" >Total Harga</td>
                                <td colspan="2" style="text-align:center">Rp 100,000</td>
                            </tr>
                        <% } %>
                        
                    </tbody>                    
                </table>
                <span style="position: absolute; right: 0px; padding: 10px;"><button class="btn" type="submit" style="width:100px; margin:5px; background-color:#00304C; color:#ffffff">Reset</button><button class="btn" type="submit" style="width:100px; margin:5px; margin-left:20px; background-color:#00304C; color:#ffffff">Checkout</button></span>
                
            </div>
        </div>
    </div>
  </div>
</div>

<script>
    function myFunction() {
        document.getElementById("myDropdown").classList.toggle("show");
    }

    function filterFunction() {
        var input, filter, count, li, a, i, p;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        div = document.getElementById("myDropdown");
        p = div.getElementsByTagName("p");
        count = 0;
        for (i = 0; i < p.length; i++) {
            txtValue = p[i].textContent || p[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                p[i].style.display = "";
            } else {
                p[i].style.display = "none";
            }
        }
        if(filter.length >= 1){
            document.getElementById("myDropdown").style.display="block";
        }
        else{
            document.getElementById("myDropdown").style.display="none";
        }
    }

    $("#myInput").keydown(function(e){
    if (e.keyCode == 13) {
            document.getElementById("search_button").click();
    }
});

var jumlahInput = document.getElementById('jumlahInput');

jumlahInput.addEventListener('input', function() {
    var newValue = parseInt(jumlahInput.value, 10);

    if (!isNaN(newValue)) {
        jumlahInput.value = newValue;
    }
});
</script>
