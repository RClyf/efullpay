        if(datas.some(item => item.jenis_barang === jenis_barang)&& datas.filter(item => item.id_barang === id_barang)[0].jenis_barang!=jenis_barang){
            document.getElementById('popupAlert').style.display = 'none';
            document.getElementById('popupUnique').style.display = 'block';
        }
        else{
            document.getElementById('submitButton').click();
            document.getElementById('popupAlert').style.display = 'none';
        }
    
    }

</script>

<script>

    function filterTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("tableBody");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[2]; 
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

    $("#myInput").keydown(function(e){
    if (e.keyCode == 13) {
            document.getElementById("search_button").click();
    }
});
</script>
